<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
    android:background="@drawable/background_xhdpi"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:id="@+id/fl1"
        android:background="#FFA1BECE">

        <TextView
            android:id="@+id/helptxt1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="@dimen/textsize"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:text="What is the binary ?"
            android:layout_marginBottom="@dimen/marginsmall"
            android:textColor="#FF000000"
            android:gravity="center"
            android:background="#00FFFFFF"
            android:textIsSelectable="false" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/marginsmall"
            android:textSize="@dimen/textsize"
            android:text="@string/helptxt1"
            android:textColor="#FF000000" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fl1"
        android:orientation="vertical">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_margin="@dimen/marginsmall"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/binahelp"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_margin="@dimen/marginsmall"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/binahelp2"/>
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:onClick="startTuto"
            android:layout_marginBottom="20dp"
            android:background="#FFA1BECE">

            <TextView
                android:id="@+id/okbut"
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:textSize="@dimen/textsize"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:text="OK !"
                android:textColor="#FF000000"
                android:gravity="center"
                android:background="#00FFFFFF"
                android:textIsSelectable="false" />

        </FrameLayout>
    </LinearLayout>



</RelativeLayout>
