<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_xhdpi">
    <View
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:id="@+id/fakeView"
        android:layout_centerInParent="true"/>
    <ImageView
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@id/fakeView"
        android:id="@+id/binary_opening"
        android:src="@drawable/opening_binary"/>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="@dimen/width_bub"
        android:id="@+id/start_game"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/binary_opening"
        android:layout_centerInParent="true"
        android:onClick="leave_activity"
        android:background="@drawable/grey_dark_button_bg">

        <TextView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:textSize="@dimen/textsize"
            android:id="@+id/start_game_txt"
            android:layout_gravity="center"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:text="@string/start_game"
            android:textColor="#FFFFFFFF"
            android:gravity="center"
            android:background="#00878787"
            android:textIsSelectable="false" />
    </FrameLayout>

</RelativeLayout>