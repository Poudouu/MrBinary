<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_xhdpi">
    <View
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:id="@+id/fakeView"
        android:layout_centerInParent="true"/>
    <ImageView
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@id/fakeView"
        android:id="@+id/binary_opening"
        android:src="@drawable/opening_binary"/>


    <ImageView
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:src="@drawable/start_game_xhdpi"
        android:layout_alignTop="@id/fakeView"
        android:layout_centerVertical="true"
        android:text="Start Game"
        android:onClick="leave_activity"
        android:id="@+id/start_game"
        android:layout_centerHorizontal="true"
/>


</RelativeLayout>