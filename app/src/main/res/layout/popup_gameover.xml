<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:id="@+id/pop"
    android:background="#FF4E7886">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:textSize="@dimen/textsize"
        android:text="@string/you_lost"
        android:id="@+id/youlost"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:textSize="@dimen/textsize"
        android:text="@string/your_score_is"
        android:id="@+id/textView6"
        android:textColor="#FF000000" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:id="@+id/linearLayout">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textsize"
            android:text="@string/your_score"
            android:id="@+id/Score"
            android:textColor="#ffA1BECE"
            android:layout_gravity="center_vertical" />

        <ImageView
            android:layout_height="40dp"
            android:src="@drawable/fblogo1"
            android:background="@drawable/blue_green_button_bg"
            android:layout_width="60dp"
            android:layout_marginLeft="@dimen/marginsmall"
            android:id="@+id/share"
            android:onClick="shareOnFacebook" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:id="@+id/restart_activity"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:background="@drawable/blue_light_button_bg">

            <TextView
                android:id="@+id/restart"
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:textSize="@dimen/textsizecounter"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:text="@string/restart"
                android:textColor="#FFFFFFFF"
                android:gravity="center"
                android:background="#00FFFFFF"
                android:textIsSelectable="false" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:id="@+id/leave_activity"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_marginRight="20dp"
            android:background="@drawable/blue_light_button_bg">

            <TextView
                android:id="@+id/exit"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="@dimen/textsizecounter"
                android:layout_margin="10dp"
                android:text="@string/main_menu"
                android:textColor="#FFFFFFFF"
                android:gravity="center"
                android:background="#00FFFFFF" />

        </FrameLayout>

    </LinearLayout>

</LinearLayout>