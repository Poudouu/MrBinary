<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Noob_selection"
        android:onClick="Switch_to_mode_1"
        android:id="@+id/button"
        android:layout_above="@+id/normal_mode_description"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignStart="@+id/button2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Normal_selection"
        android:onClick="Switch_to_mode_2"
        android:id="@+id/button2"
        android:layout_marginBottom="62dp"
        android:layout_above="@+id/button3"
        android:layout_alignLeft="@+id/button3"
        android:layout_alignStart="@+id/button3" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/God_selection"
        android:onClick="Switch_to_mode_3"
        android:id="@+id/button3"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What is the binary?"
        android:onClick="view_binary_explanation"
        android:id="@+id/button4"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Game difficulty"
        android:textSize="25sp"
        android:id="@+id/textView"
        android:layout_above="@+id/noob_mode_description"
        android:layout_alignLeft="@+id/button4"
        android:layout_alignStart="@+id/button4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Practice mode. An help containing the power of 2 is displayed. This mode is not a time attack one, no stress, just practice until number 64!"
        android:textSize="15sp"
        android:id="@+id/noob_mode_description"
        android:layout_above="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="More serious! An help containing the power of 2 is still displayed.But this mode is a time attack one, try to reach the 64 number before the end of the timeout!"
        android:textSize="15sp"
        android:id="@+id/normal_mode_description"
        android:layout_above="@+id/button2"
        android:layout_alignRight="@+id/noob_mode_description"
        android:layout_alignEnd="@+id/noob_mode_description" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You are Mr Binary, here no help displayed! And time attack mode! Enter the maximum numbers you can before the end of the timeout!"
        android:textSize="15sp"
        android:id="@+id/god_mode_description"
        android:layout_above="@+id/button3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
