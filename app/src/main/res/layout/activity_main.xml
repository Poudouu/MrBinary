<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/background_xhdpi"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent" >

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="@string/banner_ad_unit_id">
    </com.google.android.gms.ads.AdView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Noob_selection"
        android:onClick="Switch_to_mode_1"
        android:id="@+id/button"
        android:layout_below="@+id/noob_mode_description"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Normal_selection"
        android:onClick="Switch_to_mode_2"
        android:id="@+id/button2"
        android:layout_below="@+id/normal_mode_description"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/God_selection"
        android:onClick="Switch_to_mode_3"
        android:id="@+id/button3"
        android:layout_below="@+id/god_mode_description"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WTF is the binary? :o"
        android:onClick="view_binary_explanation"
        android:id="@+id/button4"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Game difficulty"
        android:textSize="27sp"
        android:layout_marginTop="6dp"
        android:id="@+id/textView"
        android:layout_below="@id/button4"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Practice mode. An help is displayed. No time attack mode, just practice until number 64!"
        android:gravity="center"
        android:textSize="13sp"
        android:layout_marginTop="4dp"
        android:id="@+id/noob_mode_description"
        android:layout_below="@id/textView"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="More serious! An help is displayed. Time attack mode, reach the number 64 before the end of the timeout!"
        android:textSize="13sp"
        android:id="@+id/normal_mode_description"
        android:gravity="center"
        android:layout_below="@id/button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You are Mr Binary! No help displayed! Time attack mode! Enter the maximum numbers you can before the end of the timeout!"
        android:textSize="13sp"
        android:id="@+id/god_mode_description"
        android:layout_below="@id/button2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:gravity="center"/>

</RelativeLayout>
