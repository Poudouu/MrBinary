<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/background_xhdpi"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent" >

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="@string/banner_ad_unit_id">
    </com.google.android.gms.ads.AdView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ln"
        android:layout_centerHorizontal="true"
        android:src="@drawable/opening_binary"
        android:layout_margin="@dimen/activity_vertical_margin" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:id="@+id/ln">
        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:minWidth="@dimen/width_bub"
            android:id="@+id/tutorial"
            android:onClick="Switch_to_mode_1"
            android:layout_marginBottom="20dp"
            android:background="#FF878787">

            <TextView
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:textSize="@dimen/textsize"
                android:id="@+id/tutotv"
                android:layout_gravity="center"
                android:layout_margin="@dimen/activity_vertical_margin"
                android:text="TUTORIAL"
                android:textColor="#FFFFFFFF"
                android:gravity="center"
                android:background="#00FFFFFF"
                android:textIsSelectable="false" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minWidth="@dimen/width_bub"
            android:id="@+id/play"
            android:layout_marginBottom="20dp"
            android:onClick="Switch_to_mode_3"
            android:background="#FF575757">

            <TextView
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:textSize="@dimen/textsize"
                android:id="@+id/playtv"
                android:layout_gravity="center"
                android:layout_margin="@dimen/activity_vertical_margin"
                android:text="PLAY"
                android:textColor="#FFFFFFFF"
                android:gravity="center"
                android:background="#00878787"
                android:textIsSelectable="false" />
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foregroundGravity="bottom"
            android:minWidth="@dimen/width_bub"
            android:id="@+id/help"
            android:layout_marginBottom="20dp"
            android:onClick="Switch_to_mode_3"
            android:background="#FFA1BECE">

            <TextView
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:textSize="@dimen/textsize"
                android:id="@+id/helptv"
                android:layout_gravity="center"
                android:layout_margin="@dimen/activity_vertical_margin"
                android:text="HELP"
                android:textColor="#FFFFFFFF"
                android:gravity="center"
                android:background="#00878787"
                android:textIsSelectable="false" />
        </FrameLayout>

    </LinearLayout>




</RelativeLayout>
